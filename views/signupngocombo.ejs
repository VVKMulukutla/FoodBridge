<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Sign-Up</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('https://wallpapercave.com/wp/wp4390828.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            text-align: center;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

        h1 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #333;
        }

        .login-options {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .login-option {
            flex-grow: 1;
            padding: 10px;
            border: none;
            background-color: transparent;
            color: #333;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s, color 0.3s;
        }

        .login-option.active {
            background-color: #007BFF;
            color: #fff;
        }

        .login-option:hover {
            background-color: #a5bed8;
            color: #fff;
            /* filter: invert(1); */
        }

        .login-form {
            display: none;
        }

        .centered {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .icon {
            margin-right: 10px;
        }

        .input-group {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            background-color: rgba(255, 255, 255, 0.7);
            border-radius: 4px;
            padding: 10px;
        }

        .input-group i {
            margin-right: 10px;
            color: #555;
        }

        .input-group input[type="text"],
        .input-group input[type="email"],
        .input-group input[type="password"] {
            flex-grow: 1;
            border: none;
            padding: 8px;
            border-radius: 4px;
            background-color: transparent;
        }

        .input-group input[type="submit"] {
            background-color: #007BFF;
            color: #fff;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .input-group input[type="submit"]:hover {
            background-color: #0056b3;
        }

        .links-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 15px;
        }

        .links-container a {
            color: #333;
            text-decoration: none;
            font-size: smaller;
            transition: color 0.3s;
        }

        .links-container a:hover {
            color: #007BFF;
        }
    </style>
</head>
<body>
    <div class="centered">
        <div class="container">
            <h1>Sign-Up</h1>
            <div class="login-options">
                <div class="login-option active" id="player-option">
                    <i class="fas fa-user icon"></i>
                    Player Sign-Up
                </div>
                <div class="login-option" id="organization-option">
                    <i class="fas fa-user-shield icon"></i>
                    Organization Sign-Up
                </div>
            </div>

            <!-- Player Sign-Up Form -->
            <form method="post" action="/signupsubmit" class="login-form" id="player-form">
                <div class="input-group">
                    <i class="fas fa-user icon"></i>
                    <input type="text" id="player-uname" name="uname" placeholder="Username" required>
                </div>
                <div class="input-group">
                    <i class="fas fa-envelope icon"></i>
                    <input type="email" id="player-email" name="email" placeholder="Email" required>
                </div>
                <div class="input-group">
                    <i class="fas fa-lock icon"></i>
                    <input type="password" id="player-password" name="password" placeholder="Password" required>
                </div>
                <input type="submit" value="Submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            </form>

            <!-- Organization Sign-Up Form -->
            <form method="post" action="/signupngosubmit" class="login-form" id="organization-form">
                <div class="input-group">
                    <i class="fas fa-user icon"></i>
                    <input type="text" id="organization-uname" name="uname" placeholder="Username" required>
                </div>
                <div class="input-group">
                    <i class="fas fa-envelope icon"></i>
                    <input type="email" id="organization-email" name="email" placeholder="Email" required>
                </div>
                <div class="input-group">
                    <i class="fas fa-lock icon"></i>
                    <input type="password" id="organization-password" name="password" placeholder="Password" required>
                </div>
                <input type="submit" value="Submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            </form>

            <div class="links-container">
                <p class="text-2xl"><a href="/login" class="text-blue-500 hover:text-blue-700">Already have an account?</a></p>
            </div>
        </div>
    </div>

    <script>
        const playerOption = document.getElementById("player-option");
        const organizationOption = document.getElementById("organization-option");
        const playerForm = document.getElementById("player-form");
        const organizationForm = document.getElementById("organization-form");

        // Initially display the player sign-up form
        playerForm.style.display = "block";
        organizationForm.style.display = "none";

        playerOption.addEventListener("click", () => {
            playerForm.style.display = "block";
            organizationForm.style.display = "none";
            playerOption.classList.add("active");
            organizationOption.classList.remove("active");
        });

        organizationOption.addEventListener("click", () => {
            playerForm.style.display = "none";
            organizationForm.style.display = "block";
            playerOption.classList.remove("active");
            organizationOption.classList.add("active");
        });
    </script>
</body>
</html>
